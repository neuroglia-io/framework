{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "packages",
  "projects": {
    "@neuroglia/measurements": {
      "projectType": "library",
      "root": "packages/neuroglia/measurements",
      "sourceRoot": "packages/neuroglia/measurements/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/neuroglia/measurements/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/neuroglia/measurements/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/neuroglia/measurements/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/neuroglia/measurements/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing",
              "./packages/neuroglia/measurements/src/lib/measurement-extension",
              "./packages/neuroglia/measurements/src/lib/capacity-extension",
              "./packages/neuroglia/measurements/src/lib/energy-extension",
              "./packages/neuroglia/measurements/src/lib/length-extension",
              "./packages/neuroglia/measurements/src/lib/mass-extension",
              "./packages/neuroglia/measurements/src/lib/surface-extension",
              "./packages/neuroglia/measurements/src/lib/temperature-extension",
              "./packages/neuroglia/measurements/src/lib/unit-extension",
              "./packages/neuroglia/measurements/src/lib/volume-extension"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "packages/neuroglia/measurements/**/*.ts",
              "packages/neuroglia/measurements/**/*.html"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  }
}
